<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      spacing="10"
      stylesheets="@../style/styleHome.css">
    <GridPane hgap="10" vgap="10" styleClass="search-employer-box">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="33.3"/>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="33.3"/>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="33.3"/>
        </columnConstraints>

        <Label fx:id="lbPensionType" text="%pensionType" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cbPensionType" GridPane.rowIndex="1" GridPane.columnIndex="0" prefWidth="350"/>
        <Label fx:id="lbNumber" text="%number" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <TextField fx:id="tfNumber" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Label fx:id="lbDateCreation" text="%dateCreation" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <DatePicker fx:id="dpDateCreation" GridPane.rowIndex="1" GridPane.columnIndex="2" prefWidth="350"/>
        <Label fx:id="lbName" text="%name" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="tfName" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Label fx:id="lbIdeNumber" text="%ideNumber" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        <TextField fx:id="tfIdeNumber" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        <Label fx:id="lbDateExpiration" text="%dateExpiration" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
        <DatePicker fx:id="dpDateExpiration" GridPane.rowIndex="3" GridPane.columnIndex="2" prefWidth="350"/>

        <HBox GridPane.rowIndex="4" GridPane.columnIndex="0">
            <Button fx:id="btnSearch" text="%search" prefWidth="120"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnReset" text="%reset" prefWidth="120"/>
        </HBox>
    </GridPane>

</VBox>
